<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Background color -->
    <solid android:color="@android:color/transparent" /> <!-- Light gray background -->

    <!-- Add a border -->
    <stroke
        android:width="2dp"
        android:color="#CCCCCC" /> <!-- Light border color -->

    <!-- Add some corner radius to give rounded corners -->
    <corners android:radius="10dp" />
</shape>